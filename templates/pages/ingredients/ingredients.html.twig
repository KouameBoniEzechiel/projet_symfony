{% extends 'base.html.twig' %}

{% block title %}ObrigadoRecipe - Mes Ingredients{% endblock %}

{% block body %}

<div class="container mt-4">
{% if not ingredients is null %}

    <h1>Mes Ingredients</h1>
<div class="alert alert-dismissible alert-success count mt-4">
    Total des ingredients : {{ ingredients.getTotalItemCount }}
</div>

<div>
    <a href="{{ path('ingredients.form') }}" class="btn btn-primary mb-4">Creer un ingredient</a>
</div>

{% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

    <table class="table table-hover">
  <thead>
    <tr>
      <th scope="col" class="text-center">Numéro</th>
      <th scope="col" class="text-center">Nom Ingredient</th>
      <th scope="col" class="text-center">Prix Ingredient</th>
      <th scope="col" class="text-center">Date Ajout</th>
      <th scope="col" class="text-center">Edition</th>
    <th scope="col" class="text-center">Suppression</th>
    </tr>
  </thead>
   
  <tbody>
   {% for ingredient in ingredients %}
    <tr class="table-active">
    <tr class="table-info">
      <th scope="row" class="text-center">{{ ingredient.id }}</th>
      <td class="text-center">{{ ingredient.nom }}</td>
      <td class="text-center">{{ ingredient.price }}</td>
      <td class="text-center">{{ ingredient.createdAt | date('d/m/Y h:i:s') }}</td>
    <td class="text-center"> <a href="{{ path('ingredients.edit', {id : ingredient.id }) }}" class="btn btn-info">Modifier ingredient</a> </td>
  <td class="text-center"> <a href="{{ path('ingredients.delete', {id : ingredient.id }) }}" class="btn btn-danger">Supprimer l'ingredient</a> </td>
    </tr>
       {% endfor %}
  </tbody>
  
</table>

  <div class="d-flex justify-content-center navigation">
    {{ knp_pagination_render(ingredients) }}
</div>
{% else %}
<div class="alert alert-dismissible alert-success count">
    Il n'y a d'ingrédients disponibles !
</div>
    
 {% endif %}
</div>

{% endblock %}
